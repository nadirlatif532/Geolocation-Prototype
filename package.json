{
    "name": "couch-heroes",
    "version": "0.1.0",
    "private": true,
    "description": "Couch Heroes - Hybrid Web/Mobile Geolocation MMO Companion App",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --filter=@couch-heroes/web",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "@types/node": "^20.11.5",
        "prettier": "^3.2.4",
        "turbo": "^1.12.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "npm@10.2.4"
}